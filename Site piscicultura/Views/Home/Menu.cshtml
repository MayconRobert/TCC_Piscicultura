
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Container{

<link href="../../Content/sweetalert2.min.css" rel="stylesheet" />

<script src="../../Scripts/sweetalert2.all.min.js"></script>

<div class="background-menu">

    <div class="panel panel-default">
        <!-- /.panel-heading -->
        <div class="panel-body">
            <br>
            <br>
            <br>
            <br>
            <button type="submit" class="btn btn-info btn-xl" onclick="location.href='@Url.Action("MenuPiscicultura","Piscicultura")' ">
                <i class="fas fa-map-marker-alt fa-2x"></i>
                <br />
                Local
            </button>
            <button type="button" class="btn btn-success btn-xl" onclick="location.href='@Url.Action("Peixes","Peixe")' ">
                <i class="fas fa-fish fa-2x"></i>
                <br />
                Peixes
            </button>
            <button type="button" class="btn btn-danger btn-xl" onclick="location.href='@Url.Action("Tarefas","Tarefa")' ">
                <i class="fas fa-calendar-alt fa-2x"></i>
