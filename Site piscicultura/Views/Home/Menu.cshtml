                Tarefas
            </button>
            <button type="button" class="btn btn-warning btn-xl" onclick="location.href='@Url.Action("MenuUsuario","Usuario")' ">
                <i class="fas fa-user fa-2x"></i>
                <br />
                Usuario
            </button>
            <br />
            <br />
            <br />
            <button type="button" class="btn btn-danger btn-xl" onclick="location.href='@Url.Action("MenuEstoque","Estoque")' ">
                <i class="fas fa-box fa-2x"></i>
                <br />
                Estoque
            </button>
            <button type="button" class="btn btn-warning btn-xl" onclick="location.href='@Url.Action("MenuBiometria","Biometria")' ">
                <i class="fas fa-clipboard fa-2x"></i>
                <br />
                Biometria
            </button>
            <button type="button" class="btn btn-info btn-xl" onclick="location.href='@Url.Action("MenuTanque","Tanque")' ">
                <i class="fas fa-tint fa-2x"></i>
                <br />
                Tanques
            </button>
            <button type="button" class="btn btn-success btn-xl" onclick="location.href='@Url.Action("MenuRacao","Racao")' ">
