@model Site_piscicultura.Models.ModeloTanque

@{
    ViewBag.Title = "CadastraTanque";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Container{

<link href="../../Content/sweetalert2.min.css" rel="stylesheet" />

<script src="../../Scripts/sweetalert2.all.min.js"></script>

<div class="background-register">

    <div class="panel panel-default">

        <div class="main-title">

            Cadastrar Tanque

        </div>

        <hr />

        <div class="panel-body" , style="margin-top:20px">

            <div class="formatted-form">

                <div class="border">

                    @using (Html.BeginForm())
    {
                        @Html.AntiForgeryToken()


                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.QuantidadePeixes, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.QuantidadePeixes, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.QuantidadePeixes, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TipoAgua, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TipoAgua, new { htmlAttributes = new { @class = "form-control", @placeholder = "Doce, Salgada, etc" } })
                                    @Html.ValidationMessageFor(model => model.TipoAgua, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.VolumeAgua, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.VolumeAgua, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tanque" } })
                                    @Html.ValidationMessageFor(model => model.VolumeAgua, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group">
                                @Html.LabelFor(model => model.NomePiscultura, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("NomeDaPiscicultura", String.Empty)
                                    @Html.ValidationMessageFor(model => model.NomePiscultura, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Peixes_cod, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("NomeDoPeixe", String.Empty)
                                    @Html.ValidationMessageFor(model => model.Peixes_cod, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Racoes_id, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("NomeDaRacao", String.Empty)
                                    @Html.ValidationMessageFor(model => model.Racoes_id, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cadastrar" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Voltar", "MenuTanque")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

@section Script{
    <script type="text/javascript">

        $(document).ready(function(){

            if ('@TempData["Msg"]' != "") {

                swal('@TempData["Msg"]');

            }else{}
        });

    </script>

}
