@model Site_piscicultura.Models.ModeloEstoque

@{
    ViewBag.Title = "EscolherPiscicultura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Container{

<link href="../../Content/sweetalert2.min.css" rel="stylesheet" />

<script src="../../Scripts/sweetalert2.all.min.js"></script>

<div class="panel panel-default">

    <div class="main-title">

        Escolha a Piscicultura

    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="dropdown-select">
                @Html.LabelFor(model => model.Id_Piscicultura, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("NomeDaPiscicultura", String.Empty)
                    @Html.ValidationMessageFor(model => model.Id_Piscicultura, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Acessar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    @Html.ActionLink("Voltar", "MenuEstoque")
</div>

}

@section Scripts{
    
    <script type="text/javascript">

        $(document).ready(function(){

            if ('@TempData["Msg"]' != "") {

                swal('@TempData["Msg"]');

            }else{}
        });

</script>
    }


