
@{
    ViewBag.Title = "MenuUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Msg"] != null)
{
    if (TempData["Msg"].ToString().IndexOf("sucesso") > 0)
    {
        <div id="Esconder" style="text-align:center; background-color: aquamarine"> @TempData["Msg"] </div>
    }
    else
    {
        <div id="Esconder" style="text-align:center; background-color: orangered"> @TempData["Msg"] </div>
    }
}

@section Container{
<div class="background-submenu">

    <div class="panel panel-default">

        <div class="main-title">

            Usuário

        </div>

        <div class="panel-body">

            <button type="button" class="btn btn-success btn-xl" onclick="location.href='@Url.Action("EditarUsuario","Usuario")' ">
                <i class="fas fa-file-alt fa-2x"></i>
                <br />
                Editar Informação
            </button>
            <button type="button" class="btn btn-info btn-xl" onclick="location.href='@Url.Action("EditarPlano","Usuario")' ">
                <i class="fas fa-money-check-alt fa-2x"></i>
                <br />
                Mudar Planos
            </button>
        </div>
    </div>
</div>


    <style>
        .btn-xl {
            width: 400px;
            height: 450px;
            padding: 10px 16px;
            border-radius: 35px;
            font-size: 24px;
            line-height: 1.33;
            margin-left: 350px;
        }

        h1 {
            text-align: center;
        }
    </style>
}
@section Script{
    <script>
        $(document).ready(function () {
            $('#Esconder').delay(5000).fadeOut();
        });
    </script>

}
